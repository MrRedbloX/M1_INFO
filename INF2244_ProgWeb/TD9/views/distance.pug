doctype html
html
  head
    meta(charset='utf-8')
    title Search
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  body
    h3 Nearest restaurant from (#{x},#{y}) :
    script.
      $(document).ready(() => {
        resto = !{restaurant}
        $("body").append("<p> "+resto.name+" ("+resto.borough.toUpperCase()+")</p>")
        $("body").append("<p> "+resto.address.building+" "+resto.address.street+" "+resto.address.zipcode+"</p>")
        $("body").append("<p> "+resto.cuisine+"</p>")
      })
